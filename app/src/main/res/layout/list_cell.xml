<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/img_layout"
        android:layout_width="100dp"
        android:layout_height="128dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:padding="10dp"
        android:background="#d65819"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:tint="@android:color/white"/>


        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/img_delete"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete_black_24dp"
            android:tint="@android:color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rectangle_validation_rdv"
        android:orientation="vertical"
        android:clickable="true"
        android:elevation="4dp"
        android:focusable="true"
        android:visibility="visible"
        android:id="@+id/data_ayout">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/medecin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Personnage" ></TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/specialite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            tools:text="Description" ></TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mal de tete"
            android:id="@+id/motif"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 jan 2019 15:00"
            android:id="@+id/date"
            />

    </LinearLayout>


</RelativeLayout>